<main>
  <div id="divContenedorModulo" class="container">
    <div class="sticky-top">
      <a href="<%= baseUrl %>/lideres/modulos" class="btnRegresar">
        <i class="fas fa-arrow-left"></i> Regresar
      </a>
    </div>
    <div class="mt-3 no-gutters d-flex flex-row flex-wrap justify-content-between">
      <div class="col-md-8 col-lg-9 mb-2">
        <h1>Módulo <span id="idModulo"></span> - <span id="nombre" class="text-secondary">Sin información</span></h1>
      </div>
      <div class="mb-2">
        <button id="btnEditarContenidoN" type="button" name="button" class="btn btn-primary" data-toggle="modal" data-target="#AgregarContenido">
          <i class="fas fa-plus"></i>
          Agregar Contenido
        </button>
      </div>
      <div class="col-12">
        <p id="descripcion"></p>
      </div>
    </div>
    <template id="plantillaContenido">
      <div class="contenido container my-3 p-3">
        <div class="row no-gutters m-2">
          <h2>Contenido <span class="numeroContenido">1</span></h2>
          <div class="col-12 my-2">
            <p class="descripcion"></p>
            <div class="contenedorBtns row mx-0 mb-3">
            </div>
            <div>
              <h5>Subir material</h5>
              <small>Una vez subido el archivo, no se podrán hacer cambios.</small>
              <form class="form-row my-2 frmArchivo">
                <div class="col-md-8 div-input mb-2">
                  <input name="ejercicio" type="file" class="filestyle" accept=".pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.zip,.txt,audio/*,video/*,image/*">
                </div>
                <div class="col-md-4 mb-2">
                  <button type="submit" class="btn btn-primary">
                    <i class="fas fa-file-upload"></i>
                    Subir archivo
                  </button>
                </div>
              </form>
            </div>
            <div class="contenedorEjercicio"></div>
          </div>
        </div>
      </div>
    </template>
  </div>
</main>
<template id="plantillaBtnMaterial">
  <div>
    <a href="#" target="_blank" download="" class="btn btn-primary btnMaterial mb-2">
      <i class="fas fa-file-download"></i>
      <span class="nombreArchivo"></span>
    </a>
  </div>
</template>
<template id="plantillaEjercicio">
  <div class="mt-2">
    <h5>Ejercicio</h5>
    <p class="descripcion"></p>
  </div>
</template>
<%- include('modals/modalAgregarContenido.ejs') %>
<%- include('modals/modalEditarContenido.ejs') %>
