<main>
  <div id="divContenedorModulo" class="container">
    <div class="sticky-top">
      <a href="<%= baseUrl %>/fridas/modulos" class="btnRegresar">
        <i class="fas fa-arrow-left"></i> Regresar
      </a>
    </div>
    <div class="row mt-3">
      <div class="col">
        <h1>
          Módulo <span id="idModulo"></span> -
          <span id="nombre" class="text-secondary">Sin información</span>
        </h1>
      </div>
      <div class="col-12">
        <p id="descripcion"></p>
      </div>
    </div>
    <template id="plantillaContenido">
      <div class="contenido container my-3 p-3">
        <div class="row no-gutters m-2">
          <h2>Contenido <span class="numeroContenido">1</span></h2>
          <div class="col-12 my-2">
            <p class="descripcion"></p>
            <div class="contenedorBtns row mx-0">
            </div>
            <div class="contenedorEjercicio"></div>
          </div>
        </div>
      </div>
    </template>
  </div>
</main>
<template id="plantillaBtnMaterial">
  <div>
    <a href="#" download="" class="btn btn-primary btnMaterial mb-2">
      <i class="fas fa-file-download"></i>
      <span class="nombreArchivo"></span>
    </a>
  </div>
</template>
<template id="plantillaInputEjercicio">
  <div>
    <h5>Subir ejercicio</h5>
    <small>Una vez subido el archivo, no se podrán hacer cambios.</small>
    <form class="form-row my-2 frmArchivo">
      <div class="col-md-8 div-input mb-2">
        <input name="ejercicio" type="file" class="filestyle" accept=".pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.zip,.txt,audio/*,video/*,image/*">
      </div>
      <div class="col-md-4 mb-2">
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-file-upload"></i>
          Subir archivo
        </button>
      </div>
    </form>
  </div>
</template>
<template id="plantillaEjercicio">
  <div class="mt-2">
    <h5>Ejercicio</h5>
    <p class="descripcion"></p>
    <div class="contenedorBtnsEjercicio row mx-0"></div>
  </div>
</template>
<template id="plantillaBtnComentarios">
  <div class="mb-2">
    <button type="button" class="btn btn-info btnVerComentarios" name="button" data-toggle="modal"
      data-target="#modalComentarios">Ver Comentarios</button>
  </div>
</template>
<%- include('modals/comentarios.ejs') %>
<script>
  const idModulo = "<%= idModulo %>";
</script>